@model User
<div class="user-settings-container">
    <div class="settings-container-head">
        <p>Особисті дані</p>
        <div class="cart-head-top-btns">
            <div class="btn" style="margin-right:1rem;" onclick="PersonalDataEditorShow()">
                <svg width="0.750rem" height="0.750rem" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg" style="margin-right:0.5rem;"><g opacity="1"><path d="M8.5 1.50003C8.63132 1.36871 8.78722 1.26454 8.9588 1.19347C9.13038 1.1224 9.31428 1.08582 9.5 1.08582C9.68572 1.08582 9.86962 1.1224 10.0412 1.19347C10.2128 1.26454 10.3687 1.36871 10.5 1.50003C10.6313 1.63135 10.7355 1.78725 10.8066 1.95883C10.8776 2.13041 10.9142 2.31431 10.9142 2.50003C10.9142 2.68575 10.8776 2.86964 10.8066 3.04123C10.7355 3.21281 10.6313 3.36871 10.5 3.50003L3.75 10.25L1 11L1.75 8.25003L8.5 1.50003Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path></g></svg>
                Змінити
            </div>
        </div>
    </div>
    <div class="settings-container-body">
        <div class="settings-body-data-list">
            <div class="settings-body-data-list-inner">
                <div class="data-list-inner-item">
                    <div class="label">Прізвище</div>
                    <div class="text" id="text11">@(Model.Surname == null ? "-" : Model.Surname)</div>
                </div>
                <div class="data-list-inner-item">
                    <div class="label">Ім'я</div>
                    <div class="text" id="text12">@(Model.Name == null ? "-" : Model.Name)</div>
                </div>
                <div class="data-list-inner-item">
                    <div class="label">По батькові</div>
                    <div class="text" id="text13">@(Model.SecondName == null ? "-" : Model.SecondName)</div>
                </div>
                <div class="data-list-inner-item">
                    <div class="label">Номер телефону</div>
                    <div class="text" id="text14">@(Model.PhoneNumber == null ? "-" : Model.PhoneNumber)</div>
                </div>
                <div class="data-list-inner-item">
                    <div class="label">Пошта</div>
                    <div class="text" id="text15">@Model.Email</div>
                </div>
            </div>
            <div class="settings-body-data-editor-list-inner">
                <div class="data-list-inner-item">
                    <div class="input-form">
                        <input class="input-form-input personal-data-input" inputmode="text" onblur="GetPasiveInput(event)" placeholder="Прізвище" onfocus="GetActiveInput(event)" id="formInput11">
                        <span class="input-form-placeholder" style="display:none" id="formPlaceholder11">Прізвище</span>
                        <span class="input-form-label" id="formLabel11">Прізвище</span>
                        <span class="error-span" id="errorSpan11"></span>
                    </div>
                </div>
                <div class="data-list-inner-item">
                    <div class="input-form">
                        <input class="input-form-input personal-data-input" inputmode="email" onblur="GetPasiveInput(event)" placeholder="Ім'я" onfocus="GetActiveInput(event)" id="formInput12">
                        <span class="input-form-placeholder" style="display:none" id="formPlaceholder12">Ім'я</span>
                        <span class="input-form-label" id="formLabel12">Ім'я</span>
                        <span class="error-span" id="errorSpan12"></span>
                    </div>
                </div>
                <div class="data-list-inner-item">
                    <div class="input-form">
                        <input class="input-form-input personal-data-input" inputmode="email" onblur="GetPasiveInput(event)" placeholder="По батькові" onfocus="GetActiveInput(event)" id="formInput13">
                        <span class="input-form-placeholder" style="display:none" id="formPlaceholder13">По батькові</span>
                        <span class="input-form-label" id="formLabel13">По батькові</span>
                        <span class="error-span" id="errorSpan13"></span>
                    </div>
                </div>
                <div class="data-list-inner-item">
                    <div class="input-form">
                        <input class="input-form-input personal-data-input" type="text" maxlength="10" onblur="GetPasiveInput(event)" placeholder="Номер телефону" onfocus="GetActiveInput(event)" id="formInput14">
                        <span class="input-form-placeholder" style="display:none" id="formPlaceholder14">Номер телефону</span>
                        <span class="input-form-label" id="formLabel14">Номер телефону</span>
                        <span class="error-span" id="errorSpan14"></span>
                    </div>
                </div>
                <div class="data-list-inner-item">
                    <div class="input-form">
                        <input class="input-form-input personal-data-input" disabled="disabled" placeholder="Пошта" inputmode="email" onblur="GetPasiveInput(event)" onfocus="GetActiveInput(event)" id="formInput15">
                        <span style="display:none" class="input-form-placeholder" id="formPlaceholder15">Пошта</span>
                        <span class="input-form-label" id="formLabel15">Пошта</span>
                        <span class="error-span" id="errorSpan15"></span>
                    </div>
                </div>
            </div>
            <div class="settings-editor-btns" style="display:none; opacity:0;">
                <div class="settings-editor-btn-cancel" onclick="PersonalDataShow()">
                    <span class="text">Скасувати</span>
                </div>
                <div class="settings-editor-btn-submit" onclick="SavePersonalData()">
                    <span class="text">Зберегти</span>
                </div>
            </div>
        </div>
    </div>
</div>