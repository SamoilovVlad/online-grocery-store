                        <a class="catalog-menu-item-link" onclick="ShowLoader();" asp-controller="Categories" asp-action="SubcategoriesView" asp-route-categoryName="Солодощі, снеки">
                            <img class="catalog-menu-img" src="~/Images/Donat.webp" />
                            <span class="catalog-menu-item-text">Солодощі, снеки</span>
                            <img style="margin-right:0.5rem;" src="https://novus.online/svg/arrow-thin-right-white.svg" />
