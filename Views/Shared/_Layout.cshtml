                        inputs[i].style.border = '0.0625rem solid #c8cbce';
                    }
                }, 300);
                isAuthorizationShowing = false;
            }
        }

        function GetPasiveInput(event) {
            const id = event.target.id.replace(/\D/g, '');
            const input = event.target;
            const label = document.getElementById('formLabel' + id);
            const placeholder = document.getElementById('formPlaceholder' + id);

            if (input.value === '') {
                label.style.opacity = '0';
                label.style.top = '30%';
                placeholder.style.opacity = '1';
                placeholder.style.top = '30%';
            }
            label.style.color = '#c8cbce';
            input.style.border = '0.0625rem solid #c8cbce';
            errorSpan7.style.display = 'none';
            errorSpan7.textContent = '';
        }

        function GetActiveInput(event) {
            const id = event.target.id.replace(/\D/g, '');
            const input = event.target;
            const label = document.getElementById('formLabel' + id);
            const placeholder = document.getElementById('formPlaceholder' + id);
            const errorSpan = document.getElementById('errorSpan' + id);

            placeholder.style.opacity = '0';
            placeholder.style.top = '-10%';
            input.style.border = '0.12rem solid #43bb3a';
            errorSpan.style.display = 'none';
            label.style.opacity = '1';
            label.style.color = '#43bb3a';
            label.style.top = '-17%';
        }

        function ChooseAuthorizationBlock(event) {
            const container = document.getElementsByClassName('authorization-container')[0];
            const logBlock = document.getElementById('logBlock');
            const regBlock = document.getElementById('regBlock');
            const logBtn = document.getElementById('loginBtn');
            const regBtn = document.getElementById('registerBtn');

            if (event.target.id === 'loginBtn') {
                if (!isLogBlockShowing) {
                    container.style.top = 'calc(50% - 180px)';
                    regBlock.style.display = 'none';
                    regBtn.classList.add('active');
                    logBtn.classList.remove('active');
                    logBlock.style.display = 'flex';
                    var inputs = document.getElementsByClassName('input-form-input');
                    for (var i = 0; i < inputs.length; i++) {
                        var id = inputs[i].id.replace(/\D/g, '');
                        const label = document.getElementById('formLabel' + id);
                        const placeholder = document.getElementById('formPlaceholder' + id);
                        const errorspan = document.getElementById('errorSpan' + id)
                        inputs[i].value = '';
                        label.style.opacity = '0';
                        label.style.top = '30%';
                        errorspan.style.display = 'none';
                        placeholder.style.opacity = '1';
                        placeholder.style.top = '30%';
                        label.style.color = '#c8cbce';
                        inputs[i].style.border = '0.0625rem solid #c8cbce';
                    }
                    const errorSpan7 = document.getElementById('errorSpan7');
                    errorSpan7.style.display = 'none';

                    isLogBlockShowing = true;
                }
            } else {
                if (isLogBlockShowing) {
                    container.style.top = 'calc(50% - 200px)';
                    logBlock.style.display = 'none';
                    logBtn.classList.add('active');
                    regBlock.style.display = 'flex';
                    regBtn.classList.remove('active');

                    var inputs = document.getElementsByClassName('input-form-input');
                    for (var i = 0; i < inputs.length; i++) {
                        var id = inputs[i].id.replace(/\D/g, '');
                        const label = document.getElementById('formLabel' + id);
                        const placeholder = document.getElementById('formPlaceholder' + id);
                        const errorspan = document.getElementById('errorSpan' + id);
                        inputs[i].value = '';
                        label.style.opacity = '0';
                        label.style.top = '30%';
                        errorspan.style.display = 'none';
                        placeholder.style.opacity = '1';
                        placeholder.style.top = '30%';
                        label.style.color = '#c8cbce';
                        inputs[i].style.border = '0.0625rem solid #c8cbce';
                    }
                    const errorSpan7 = document.getElementById('errorSpan7');
                    errorSpan7.style.display = 'none';

                    isLogBlockShowing = false;
                }
            }
        }

        function ValidateFormData() {
            var errorCount = 0;

            if (isLogBlockShowing) {
                const logInput = document.getElementById('formInput1');
                const logLabel = document.getElementById('formLabel1');
                const errorSpan1 = document.getElementById('errorSpan1');
                const pwdInput = document.getElementById('formInput2');
                const pwdLabel = document.getElementById('formLabel2');
                const errorSpan2 = document.getElementById('errorSpan2');
                const errorSpan7 = document.getElementById('errorSpan7');

                fetch(`/User/IsUserExist?email=${encodeURIComponent(logInput.value)}&password=${encodeURIComponent(pwdInput.value)}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data === false) {
                            logInput.style.border = '0.12rem solid #ff5631';
                            logLabel.style.color = '#ff5631';
                            errorSpan1.style.display = 'none';
                            pwdInput.style.border = '0.12rem solid #ff5631';
                            pwdLabel.style.color = '#ff5631';
                            errorSpan2.style.display = 'none';
                            errorSpan7.textContent = 'Невірна пошта або пароль';
                            errorSpan7.style.display = 'flex';
                            errorCount++;
                        }
                    })
                return errorCount;
            } else {
                const nameInput = document.getElementById('formInput3');
                const nameLabel = document.getElementById('formLabel3');
                const errorSpan3 = document.getElementById('errorSpan3');
                const mailInput = document.getElementById('formInput4');
                const mailLabel = document.getElementById('formLabel4');
                const errorSpan4 = document.getElementById('errorSpan4');
                const pwdInput = document.getElementById('formInput5');
                const pwdLabel = document.getElementById('formLabel5');
                const errorSpan5 = document.getElementById('errorSpan5');
                const confPwdInput = document.getElementById('formInput6');
                const confPwdLabel = document.getElementById('formLabel6');
                const errorSpan6 = document.getElementById('errorSpan6');

                if (nameInput.value.length < 2) {
                    nameInput.style.border = '0.12rem solid #ff5631';
                    nameLabel.style.color = '#ff5631';
                    errorSpan3.textContent = `Ім'я має містити не менше двох символів`;
                    errorSpan3.style.display = 'flex';
                    document.getElementById('formPlaceholder3').style.top = '24%';
                    errorCount++;
                }
                else if (nameInput.value.length > 20) {
                    nameInput.style.border = '0.12rem solid #ff5631';
                    nameLabel.style.color = '#ff5631';
                    errorSpan3.textContent = `Ім'я має містити не більше двадцяти символів`;
                    errorSpan3.style.display = 'flex';
                    document.getElementById('formPlaceholder3').style.top = '24%';
                    errorCount++;
                }
                else {
                    nameInput.style.border = '0.12rem solid #43bb3a';
                    nameLabel.style.color = '#48bb3a';
                    errorSpan3.style.display = 'none';
                }
                if (mailInput.value.length === 0) {
                    mailInput.style.border = '0.12rem solid #ff5631';
                    mailLabel.style.color = '#ff5631';
                    errorSpan4.textContent = 'Введіть свою пошту';
                    errorSpan4.style.display = 'flex';
                    document.getElementById('formPlaceholder4').style.top = '24%';
                    errorCount++;
                }
                else if (mailInput.value.length > 0) {
                    fetch(`/User/IsEmailValid?email=${encodeURIComponent(mailInput.value)}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data === false) {
                                mailInput.style.border = '0.12rem solid #ff5631';
                                mailLabel.style.color = '#ff5631';
                                errorSpan4.textContent = 'Невірна пошта'
                                errorSpan4.style.display = 'flex';
                                document.getElementById('formPlaceholder4').style.top = '24%';
                                errorCount++;
                            }
                            else {
                                fetch(`/User/IsEmailAvailable?email=${encodeURIComponent(mailInput.value)}`)
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data === false) {
                                            mailInput.style.border = '0.12rem solid #ff5631';
                                            mailLabel.style.color = '#ff5631';
                                            errorSpan4.textContent = 'Пошта зайнята'
                                            errorSpan4.style.display = 'flex';
                                            document.getElementById('formPlaceholder4').style.top = '24%';
                                            errorCount++;
                                        }
                                        else {
                                            mailInput.style.border = '0.12rem solid #43bb3a';
                                            mailLabel.style.color = '#48bb3a';
                                            errorSpan4.style.display = 'none';
                                        }
                                    });
                            }
                        })
                }

                if (pwdInput.value.length < 8) {
                    pwdInput.style.border = '0.12rem solid #ff5631';
                    pwdLabel.style.color = '#ff5631';
                    errorSpan5.textContent = 'Слабкий пароль';
                    errorSpan5.style.display = 'flex';
                    document.getElementById('formPlaceholder5').style.top = '24%';
                    errorCount++;
                }
                else if (!isLowerExist(pwdInput.value)) {
                    pwdInput.style.border = '0.12rem solid #ff5631';
                    pwdLabel.style.color = '#ff5631';
                    errorSpan5.textContent = 'Пароль має містити малу літеру';
                    errorSpan5.style.display = 'flex';
                    document.getElementById('formPlaceholder5').style.top = '24%';
                    errorCount++;
                }
                else if (!isUpperExist(pwdInput.value)) {
                    pwdInput.style.border = '0.12rem solid #ff5631';
                    pwdLabel.style.color = '#ff5631';
                    errorSpan5.textContent = 'Пароль має містити велику літеру';
                    errorSpan5.style.display = 'flex';
                    document.getElementById('formPlaceholder5').style.top = '24%';
                    errorCount++;
                }
                else if (!isSymbolExist(pwdInput.value)) {
                    pwdInput.style.border = '0.12rem solid #ff5631';
                    pwdLabel.style.color = '#ff5631';
                    errorSpan5.textContent = 'Пароль має містити спеціальний символ';
                    errorSpan5.style.display = 'flex';
                    document.getElementById('formPlaceholder5').style.top = '24%';
                    errorCount++;
                }
                else if (!isNumberExist(pwdInput.value)) {
                    pwdInput.style.border = '0.12rem solid #ff5631';
                    pwdLabel.style.color = '#ff5631';
                    errorSpan5.textContent = 'Пароль має містити цифру';
                    errorSpan5.style.display = 'flex';
                    document.getElementById('formPlaceholder5').style.top = '24%';
                    errorCount++;
                }
                else {
                    pwdInput.style.border = '0.12rem solid #43bb3a';
                    pwdLabel.style.color = '#48bb3a';
                    errorSpan5.style.display = 'none';
                }
                if (confPwdInput.value !== pwdInput.value) {
                    confPwdInput.style.border = '0.12rem solid #ff5631';
                    confPwdLabel.style.color = '#ff5631';
                    errorSpan6.textContent = 'Пароль не збігається';
                    errorSpan6.style.display = 'flex';
                    document.getElementById('formPlaceholder6').style.top = '24%';
                    errorCount++;
                }
                else if (confPwdInput.value.length < 8) {
                    confPwdInput.style.border = '0.12rem solid #ff5631';
                    confPwdLabel.style.color = '#ff5631';
                    errorSpan6.textContent = 'Слабкий пароль';
                    errorSpan6.style.display = 'flex';
                    document.getElementById('formPlaceholder6').style.top = '24%';
                    errorCount++;
                }
                else {
                    confPwdInput.style.border = '0.12rem solid #43bb3a';
                    confPwdLabel.style.color = '#48bb3a';
                    errorSpan6.style.display = 'none';
                }
                return errorCount;
            }
        }

        function Register() {
            var errorCount = ValidateFormData();
            if (!isLogBlockShowing) {
                $('#loader-green').show();
                setTimeout(function () {
                    if (errorCount === 0) {
                        const name = document.getElementById('formInput3').value;
                        const email = document.getElementById('formInput4').value;
                        const password = document.getElementById('formInput5').value;

                        fetch(`/User/Register`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            },
                            body: `email=${encodeURIComponent(email)}&password=${encodeURIComponent(password)}&name=${encodeURIComponent(name)}`
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data === true) {
                                    CloseAuthorization();
                                    OpenMsgBox('Зверніть увагу!', 'Щоб авторизуватися, будь ласка підтвердіть вашу пошту, перейшовши за посиланням в отриманому в листі');
                                }
                            })
                            .finally(() => {
                                $('#loader-green').hide();
                            });
                    } else if (errorCount > 2) {
                        document.getElementsByClassName('authorization-container')[0].style.top = 'calc(50% - 240px)';
                        $('#loader-green').hide();
                    }
                    else {
                        $('#loader-green').hide();
                    }
                }, 500);
            }
            else {
                $('#loader-green').show();
                setTimeout(function () {
                    var errorSpan7 = document.getElementById('errorSpan7');
                    if (errorSpan7.textContent !== 'Невірна пошта або пароль') {
                        const logInput = document.getElementById('formInput1');
                        fetch(`/User/IsEmailConfirmed?email=${encodeURIComponent(logInput.value)}`)
                            .then(response => response.json())
                            .then(data => {
                                if (data === false) {
                                    EmailConfirmationError();
                                    $('#loader-green').hide();
                                }
                                else {
                                    const email = document.getElementById('formInput1').value;
                                    const password = document.getElementById('formInput2').value;

                                    fetch(`/User/Login?email=${encodeURIComponent(email)}&password=${encodeURIComponent(password)}`)
                                        .then(response => response.json())
                                        .then(data => {
                                            if (data.success) {
                                                window.location.href = `/User/UserProfileView`;
                                            } else {
                                                console.error("Login failed");
                                            }
                                        })
                                        .finally(() => {
                                            $('#loader-green').hide();
                                        });
                                }
                            });
                    }
                    else {
                        $('#loader-green').hide();
                    }
                }, 1500);
            }
        }

        function EmailConfirmationError() {
            const errorSpan7 = document.getElementById('errorSpan7');

            errorSpan7.textContent = 'Підтвердіть свою пошту';
            errorSpan7.style.display = 'flex';
        };

        function isLowerExist(pass) {
            var lowercaseRegex = /[a-z]/;
            return pass.match(lowercaseRegex) !== null ? true : false;
        }

        function isUpperExist(pass) {
            var uppercaseRegex = /[A-Z]/;
            return uppercaseRegex.test(pass) ? true : false;
        }

        function isSymbolExist(pass) {
            var symbolRegex = /[!#$%^&*(),.?":{}|<>]/;
            return symbolRegex.test(pass) ? true : false;
        }

        function isNumberExist(pass) {
            var numberRegex = /\d/;
            return numberRegex.test(pass) ? true : false;
        }

        function getCookie(name) {
            const cookies = document.cookie.split(';');

            for (let i = 0; i < cookies.length; i++) {
                const cookie = cookies[i].trim();
                if (cookie.startsWith(name + '=')) {
                    return cookie.substring(name.length + 1);
                }
            }
            return null;
        }

        function GetProfile() {
            const userCookieValue = getCookie('UserCookie');
            if (userCookieValue != null) {
                window.location.href = `/User/UserProfileView`;
            }
            else {
                ShowAuthorization();
            }
        };

        function OpenMsgBox(title, content) {
            const msgBox = document.getElementsByClassName('msg-box')[0];
            const msgTitle = document.getElementById('msgBoxTitle');
            const msgContent = document.getElementById('msgBoxContent');
            msgTitle.textContent = title;
            msgContent.textContent = content;
            msgBox.style.opacity = '1';
            msgBox.style.display = 'flex';
            msgBox.style.right = '0';
            setTimeout(function () {
                msgBox.style.opacity = '0';

                setTimeout(function () {
                    CloseMsgBox();
                }, 500);
            }, 5000);
        }

        function CloseMsgBox() {
            const msgBox = document.getElementsByClassName('msg-box')[0];
            msgBox.style.display = 'none';
            msgBox.style.right = '-500px';
            msgBox.style.opacity = '0';
        }

    </script>
